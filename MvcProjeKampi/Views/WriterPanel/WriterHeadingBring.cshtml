@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "WriterHeadingBring";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<main>
    <div class="container-fluid">
        <h1 class="mt-4"></h1>
        <ol class="breadcrumb mb-4">
        </ol>
        <div class="card mb-4">
            <div class="card-body">
                @using (Html.BeginForm("WriterHeadingUpdate", "WriterPanel", FormMethod.Post)) 
                {
                <div class="form-group">
                    @Html.HiddenFor(x => x.HeadingId)
                    <br />
                    @Html.Label("Başlık:")
                    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
                    <br/>
                    @Html.Label("Kategori Adı:")
                    @Html.DropDownListFor(x => x.CategoryId, ((List<SelectListItem>)ViewBag.d1), new {@class="form-control"})
                    <br/>
                    <br/>
                    <button class="btn btn-success">GÜNCELLE</button>
                </div>

                }
            </div>
        </div>
    </div>
</main>



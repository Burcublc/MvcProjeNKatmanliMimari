@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "WriterHeadingAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<main>
    <div class="container-fluid">
        <h1 class="mt-4"></h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Yeni Başlık Ekle</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
                @using (Html.BeginForm("WriterHeadingAdd", "WriterPanel", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Başlık:")
                        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
                        <br />
                        @Html.Label("Kategori Adı:")
                        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.d1, new { @class = "form-control" })
                        <br />
                        <br />
                        <button class="btn btn-success">EKLE</button>
                    </div>
                }
            </div>
        </div>
    </div>
</main>



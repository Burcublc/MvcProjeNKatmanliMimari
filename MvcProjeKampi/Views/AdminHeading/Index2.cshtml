@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string color = "";}

<main>
    <div class="container-fluid">
        <h1 class="mt-4"></h1>
        <ol class="breadcrumb mb-4">
        </ol>
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Başlık Listesi</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%">
                                    #
                                </th>
                                <th style="width: 20%">
                                    Başlık Adı
                                </th>
                                <th style="width: 30%">
                                    Oluşturan Yazar
                                </th>
                                <th>
                                    Kategori Adı
                                </th>
                                <th>
                                    Durum
                                </th>
                                @*<th style="width: 8%" class="text-center">

                                    </th>*@
                                <th style="width: 20%">

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var h in Model)
                            {
                                if (h.Category.CategoryName == "Tiyatro")
                                {
                                    color = "badge badge-warning";
                                }
                                if (h.Category.CategoryName == "Eğitim")
                                {
                                    color = "badge badge-info";
                                }
                                if (h.Category.CategoryName == "Kitap")
                                {
                                    color = "badge badge-success";
                                }
                                if (h.Category.CategoryName == "Spor")
                                {
                                    color = "badge badge-secondary";
                                }
                                if (h.Category.CategoryName == "Film")
                                {
                                    color = "badge badge-danger";
                                }
                                if (h.Category.CategoryName == "Dizi")
                                {
                                    color = "badge badge-primary";
                                }


                                <tr>
                                    <td>
                                        #
                                    </td>
                                    <td>
                                        <a>
                                            @h.HeadingName
                                        </a>
                                        <br />
                                        <small>
                                            @(((DateTime)h.HeadingDate).ToString("dd-MMM-yyyy"))
                                        </small>
                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="@h.Writer.WriterImage">
                                            </li>

                                        </ul>
                                    </td>

                                    <td class="project-state">
                                        <span class="@color">@h.Category.CategoryName</span>

                                    </td>
                                    @if (h.HeadingStatus == true)
                                    {
                                        <td class="project-state">
                                            Aktif
                                        </td>
                                    }
                                    @if (h.HeadingStatus == false)
                                    {
                                        <td class="project-state">
                                            Pasif
                                        </td>
                                    }

                                    <td class="project-actions text-right">
                                        @if (h.HeadingStatus == true)
                                        {
                                            <a class="btn btn-danger btn-sm" href="/AdminHeading/HeadingDelete2/@h.HeadingId">
                                                <i class="fas fa-trash">
                                                </i>
                                                Pasif Yap
                                            </a>
                                        }
                                        @if (h.HeadingStatus == false)
                                        {
                                            <a class="btn btn-primary btn-sm" href="/AdminHeading/HeadingDelete2/@h.HeadingId">
                                                <i class="fas fa-trash">
                                                </i>
                                                Aktif Yap
                                            </a>
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />




                </div>
        </section>
    </div>
</main>


